<h3>Login form</h3>

<% flash.each do |_type, msg| %>
  <li>
    <%= msg %>
  </li>
<% end %>

<%= form_with(url: login_path, method: :post) do |f| %>
  <div>
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>
  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>
